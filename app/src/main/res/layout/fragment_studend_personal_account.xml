<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/studentImg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/default_avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/studentLoginTxt"
        style="@style/BaseTextView"
        android:hint="login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/studentImg"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/studentEmailTxt"
        style="@style/BaseTextView"
        android:hint="email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/studentImg"
        app:layout_constraintTop_toBottomOf="@id/studentLoginTxt" />

    <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/deleteStudentAccBtn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:hint="Удалить аккаунт"
        android:textColorHint="@color/red"
        app:strokeColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/studentImg"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/LogOutStudentAccBtn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:hint="Выйти"
        android:textColorHint="@color/red"
        app:strokeColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/deleteStudentAccBtn"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="400dp"
        android:layout_height="470dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/deleteStudentAccBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>